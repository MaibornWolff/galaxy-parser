{
    "title": "MetricGardener Output",
    "description": "The output generated by MetricGardener",
    "type": "object",
    "properties": {
        "apiVersion": {
            "description": "The version of the generated JSON file. Some versions may not be compatible with different versions of consuming systems e.g. CodeCharta.",
            "type": "string"
        },
        "metricInfo": {
            "type": "object",
            "description": "A dictionary containing information about the metrics.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "title": {
                        "description": "A descriptive title of the metric.",
                        "type": "string"
                    },
                    "description": {
                        "description": "A description of the metric.",
                        "type": "string"
                    },
                    "higherIsBetter": {
                        "description": "A boolean value indicating whether higher values of the metric are better.",
                        "type": "boolean"
                    },
                    "link": {
                        "description": "A link to the MetricGardener GitHub page where the metric is defined and shown in detail how its calculated.",
                        "type": "string",
                        "pattern": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$"
                    }
                },
                "required": ["title", "description", "higherIsBetter", "link"]
            }
        },
        "files": {
            "description": "A list of files containing information about the metrics for each file.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "file": {
                        "description": "The relative path to the file.",
                        "type": "string"
                    },
                    "type": {
                        "description": "The type of the node.",
                        "enum": ["source_code"]
                    },
                    "metrics": {
                        "description": "Each metric has a key-value pair where the key is the name of the metric and the value is the value of the metric.",
                        "type": "object",
                        "additionalProperties": {
                            "type": "number"
                        }
                    }
                },
                "required": ["file", "type", "metrics"]
            }
        },
        "relationalMetrics": {
            "description": "A dictionary containing information about the relational metrics in the graph.",
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "directional": {
                        "description": "A boolean value indicating whether the metric is directional.",
                        "type": "boolean"
                    },
                    "relations": {
                        "description": "A list of dictionaries containing information about the relations in the graph.",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "fromFile": {
                                    "description": "The source file of the relation.",
                                    "type": "string"
                                },
                                "toFile": {
                                    "description": "The destination file of the relation.",
                                    "type": "string"
                                }
                            },
                            "required": ["fromFile", "toFile"]
                        }
                    }
                },
                "required": ["directional", "relations"]
            }
        }
    },
    "required": ["apiVersion", "metricInfo","files", "relationalMetrics"],
    "additionalProperties": false
}
