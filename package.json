{
    "name": "metric-gardener",
    "version": "0.1.0",
    "description": "A tool to calculate metrics for imperative and object-oriented languages",
    "main": "dist/app.js",
    "scripts": {
        "start": "tsc && node dist/app.js",
        "format": "prettier --write \"./**/*\"",
        "format:quick": "pretty-quick --staged",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "lint:quick": "npm run precommit",
        "prepare": "husky install",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --fix"
    },
    "dependencies": {
        "@ganezdragon/tree-sitter-perl": "github:ganezdragon/tree-sitter-perl",
        "javascript-lp-solver": "^0.4.24",
        "tree-parser-erlang": "github:AbstractMachinesLab/tree-sitter-erlang",
        "tree-sitter": "^0.20.0",
        "tree-sitter-agda": "github:tree-sitter/tree-sitter-agda",
        "tree-sitter-c": "github:tree-sitter/tree-sitter-c",
        "tree-sitter-c-sharp": "^0.19.0",
        "tree-sitter-cpp": "github:tree-sitter/tree-sitter-cpp",
        "tree-sitter-elixir": "github:elixir-lang/tree-sitter-elixir",
        "tree-sitter-go": "^0.19.1",
        "tree-sitter-haskell": "github:tree-sitter/tree-sitter-haskell",
        "tree-sitter-java": "^0.19.1",
        "tree-sitter-javascript": "^0.19.0",
        "tree-sitter-julia": "github:tree-sitter/tree-sitter-julia",
        "tree-sitter-kotlin": "^0.2.11",
        "tree-sitter-lua": "github:Azganoth/tree-sitter-lua",
        "tree-sitter-objc": "github:jiyee/tree-sitter-objc",
        "tree-sitter-php": "^0.19.0",
        "tree-sitter-python": "github:tree-sitter/tree-sitter-python",
        "tree-sitter-r": "github:r-lib/tree-sitter-r",
        "tree-sitter-ruby": "github:tree-sitter/tree-sitter-ruby",
        "tree-sitter-rust": "github:tree-sitter/tree-sitter-rust",
        "tree-sitter-scala": "github:tree-sitter/tree-sitter-scala",
        "tree-sitter-swift": "github:tree-sitter/tree-sitter-swift",
        "tree-sitter-typescript": "^0.19.0",
        "yargs": "^17.2.1",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "@babel/preset-typescript": "^7.16.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.6",
        "@types/yargs": "^17.0.5",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "babel-jest": "^27.3.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^12.0.2",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.1",
        "typescript": "^4.4.4"
    }
}
