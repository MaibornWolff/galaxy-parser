{
    "name": "metric-gardener",
    "version": "0.1.1",
    "description": "A tool to calculate metrics for imperative and object-oriented languages",
    "main": "dist/src/app.js",
    "bin": "dist/src/app.js",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "tsc && node dist/src/app.js",
        "test": "tsc && jest --maxWorkers=64",
        "format": "prettier --write \"./**/*\"",
        "format:quick": "pretty-quick --staged",
        "format:check": "prettier --check \"./**/*\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "lint:quick": "npm run precommit",
        "prepare": "tsc && copyfiles /src/parser/config/nodeTypesConfig.json dist/src/parser/config/nodeTypesConfig.json && husky install",
        "precommit": "lint-staged",
        "commitmsg": "commitlint --edit"
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --fix"
    },
    "dependencies": {
        "copyfiles": "2.4.1",
        "tree-sitter": "0.20.6",
        "tree-sitter-c-sharp": "0.20.0",
        "tree-sitter-cpp": "0.20.5",
        "tree-sitter-go": "0.20.0",
        "tree-sitter-java": "0.20.2",
        "tree-sitter-javascript": "0.20.3",
        "tree-sitter-kotlin": "0.3.1",
        "tree-sitter-php": "0.22.0",
        "tree-sitter-python": "0.20.4",
        "tree-sitter-typescript": "0.20.5",
        "tree-sitter-bash": "0.20.5",
        "tree-sitter-json": "0.20.2",
        "tree-sitter-yaml": "0.5.0",
        "yargs": "17.7.2",
        "tree-sitter-ruby": "0.20.1",
        "tree-sitter-rust": "0.20.4",
        "tree-sitter-c": "0.20.8",
        "zlib": "1.0.5"
    },
    "devDependencies": {
        "@babel/core": "7.23.9",
        "@babel/preset-env": "7.23.9",
        "@babel/preset-typescript": "7.23.3",
        "@types/jest": "29.5.12",
        "@types/node": "16.18.83",
        "@types/yargs": "17.0.32",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "babel-jest": "29.7.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-unused-imports": "2.0.0",
        "husky": "9.0.11",
        "jest": "29.7.0",
        "lint-staged": "15.2.2",
        "prettier": "3.2.5",
        "pretty-quick": "4.0.0",
        "typescript": "5.3.3",
        "commitlint": "18.6.1",
        "@commitlint/config-conventional": "18.6.2"
    }
}
