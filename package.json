{
    "name": "metric-gardener",
    "version": "0.1.1",
    "description": "A tool to calculate metrics for imperative and object-oriented languages",
    "main": "dist/src/app.js",
    "bin": "dist/src/app.js",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "tsc && node dist/src/app.js",
        "test": "tsc && jest --maxWorkers=24",
        "format": "prettier --write \"./**/*\"",
        "format:quick": "pretty-quick --staged",
        "format:check": "prettier --check \"./**/*\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "lint:quick": "npm run precommit",
        "prepare": "tsc && copyfiles /src/parser/config/nodeTypesConfig.json dist/src/parser/config/nodeTypesConfig.json && husky install",
        "precommit": "lint-staged",
        "commitmsg": "commitlint --edit"
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --fix"
    },
    "dependencies": {
        "copyfiles": "2.4.1",
        "tree-sitter": "0.20.6",
        "tree-sitter-c-sharp": "0.20.0",
        "tree-sitter-cpp": "0.20.3",
        "tree-sitter-go": "0.20.0",
        "tree-sitter-java": "0.20.2",
        "tree-sitter-javascript": "0.20.3",
        "tree-sitter-kotlin": "0.3.1",
        "tree-sitter-php": "0.20.0",
        "tree-sitter-python": "0.20.4",
        "tree-sitter-typescript": "0.20.3",
        "yargs": "17.2.1",
        "zlib": "1.0.5"
    },
    "devDependencies": {
        "@babel/core": "7.16.0",
        "@babel/preset-env": "7.16.0",
        "@babel/preset-typescript": "7.16.0",
        "@types/jest": "27.0.2",
        "@types/node": "16.11.6",
        "@types/yargs": "17.0.5",
        "@typescript-eslint/eslint-plugin": "5.4.0",
        "@typescript-eslint/parser": "5.4.0",
        "babel-jest": "27.3.1",
        "eslint": "8.56.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-unused-imports": "2.0.0",
        "husky": "7.0.4",
        "jest": "27.3.1",
        "lint-staged": "12.5.0",
        "prettier": "2.4.1",
        "pretty-quick": "3.1.1",
        "typescript": "4.4.4",
        "commitlint": "18.6.1",
        "@commitlint/config-conventional": "18.6.2"
    }
}
